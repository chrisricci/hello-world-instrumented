apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: hello-world
spec:
  gateways:
  - hello-world-gateway
  hosts:
  - hello-world-istio.<istio-subdomain>
  http:
  - match:
    - uri:
        exact: /
    route:
    - destination:
        host: hello-world-istio
        port:
          number: 8080
        subset: production
      weight: 50
    - destination:
        host: hello-world-istio
        port:
          number: 8080
        subset: canary 
      weight: 50
    retries:
      attempts: 10
      perTryTimeout: 12s
